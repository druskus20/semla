{
  title: "Semla",
  favicon: "favicon.svg",
  author: "druskus",
  "description": "Todo app written in Gleam",
  scripts: [
    "semla.js"
  ],
  styles: [
    "styles.css"
  ],
  watch_patterns: [
    "src/**",
    "static/**",
  ],
  "spa_pages": {
    "index": {
      "title": "Semla",
    },
    "login": {
      "title": "Semla - Login"
    }
  },
  env_files: {
    dev: ".env.dev",
    prd: ".env",
  },
  pre_hook: [
    "gleam run -m lustre/dev build --outdir=.lustre --no-html",
    "cp .lustre/semla.js .bageri/",
    "cp static/styles.css .bageri/",
  ],
  output_dir: ".bageri"
}
